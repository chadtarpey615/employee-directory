<div class="mx-auto">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
 </div>
</div>

  <div class="w-full flex justify-center">
   <%= image_tag avatar_url(@employee.email), class: "w-48 flex-none bg-cover rounded-t lg:rounded-t-none lg:rounded-l text-center overflow-hidden" %>
  <div class="border-r border-b border-l border-gray-400 lg:border-l-0 lg:border-t lg:border-gray-400 bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
    <div >
      <p class="text-gray-900 font-bold text-xl"><%= @employee.name %></div>
      <p class="text-gray-700 text-base">Email: <%= @employee.email %></p>
      <p class="text-gray-700 text-base">Bio: <%= @employee.bio %></p>
    </div>
  </div>
  <div class="flex w-full flex-col items-center mt-2">
  <%= link_to 'Edit', edit_employee_path(@employee), class: "text-center rounded-lg py-3 px-5 bg-gray-100 font-medium w-52" %>
   <%= button_to 'Destroy this employee', employee_path(@employee), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
  <%= link_to 'Back', employees_path, class: "text-center mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium w-52" %>
</div>
 
</div>


